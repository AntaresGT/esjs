{
	"$schema": "https://biomejs.dev/schemas/1.7.2/schema.json",
	"files": {
		"include": [
			"scripts/**/*.js",
			"packages/**/*.js",
			"packages/**/*.ts",
			"packages/**/*.mjs"
		],
		"ignore": ["**/test/fixtures/**", "**/dist/**"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	}
}
