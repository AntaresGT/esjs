{
  "name": "@es-js/sandbox",
  "version": "0.0.4",
  "scripts": {
    "dev": "vite",
    "build": "vite build && pnpm tailwind:build",
    "watch": "concurrently \"tsc --watch\" \"vite build --watch\"",
    "test": "vitest",
    "test:run": "vitest run",
    "publish": "pnpm build && pnpm publish",
    "tailwind:dev": "tailwindcss -i ./src/style.css -o ./dist/style.css --watch",
    "tailwind:build": "tailwindcss -i ./src/style.css -o ./dist/style.css --minify"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.31.1",
    "@es-js/compiler": "workspace:^",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.0",
    "eruda": "^3.0.1",
    "eslint": "8.22.0",
    "lz-string": "^1.5.0",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6",
    "vite": "^4.4.7",
    "vite-plugin-dts": "^1.7.3"
  },
  "type": "module",
  "main": "./dist/main.cjs",
  "module": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "require": "./dist/main.cjs",
      "types": "./dist/main.d.ts"
    },
    "./sandbox": {
      "import": "./dist/sandbox.js",
      "require": "./dist/sandbox.cjs",
      "types": "./dist/sandbox.d.ts"
    }
  },
  "files": [
    "/dist",
    "/types"
  ]
}
